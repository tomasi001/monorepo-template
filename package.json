{
  "name": "direct-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "packageManager": "yarn@1.22.19",
  "main": "index.js",
  "author": "tomasi-metaversal <thomas@metaversal.gg>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "set -o allexport; source .env; set +o allexport && turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "generate": "turbo run generate",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:generate": "turbo run db:generate",
    "db:studio": "set -o allexport; source .env; set +o allexport && yarn db:generate && turbo run db:studio",
    "db:seed": "set -o allexport; source .env; set +o allexport && yarn db:generate && turbo run db:seed"
  },
  "devDependencies": {
    "@packages/eslint-config-custom": "*",
    "@packages/tsconfig": "*",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.1",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
